<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:id="@+id/rl_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_image_height"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/gradiant_rectangle_height"
            android:layout_alignParentBottom="true">

            <View
                android:background="@drawable/gradiant_bottom_top_rectangle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gradiant_rectangle_height"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="@color/colorWhite"
                android:textAllCaps="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_category"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>